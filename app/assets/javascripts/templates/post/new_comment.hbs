<div class='container'>
    <form class="form-signin">

        <div class="form-group">
          <label for="title" class="col-sm-2 control-label">Comment</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="title" name="Title" placeholder="Title" required>
          </div>
        </div>

        <div class="form-group">
          <label for="description" class="col-sm-2 control-label">Comment</label>
          <div class="col-sm-10">
            <textarea id="description" class="form-control" name="description" placeholder="Your Thoughts" rows="8" required></textarea>  
          </div>
        </div>

        <div class="form-group">
          <label for="zip" class="col-sm-2 control-label">Commenter</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="replier" name="replier" placeholder="Your Name" required>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class='btn btn-success' {{action 'save'}}>Submit Comment</button>
          </div>
        </div>

     </form>
</div>


