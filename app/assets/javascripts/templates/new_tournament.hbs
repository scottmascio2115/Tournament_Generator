<div class='container'>
    <form class="form-signin">

        <div class="form-group">
          <label for="name" class="col-sm-2 control-label">Tournament Name</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="Name" placeholder="Tourny Name" required>
          </div>
        </div>

        <div class="form-group">
          <label for="description" class="col-sm-2 control-label">Description</label>
          <div class="col-sm-10">
            <textarea id="description" class="form-control" name="description" placeholder="Talk Trash" rows="8" required></textarea>  
          </div>
        </div>

        <div class="form-group">
          <label for="start_date" class="col-sm-2 control-label">Start Date</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="start_date" name="Start_date" placeholder="Start Date" required>
          </div>
        </div>

        <div class="form-group">
          <label for="end_date" class="col-sm-2 control-label">End Date</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="end_date" name="End_date" placeholder="End Date" required>
          </div>
        </div>

        <div class="form-group">
          <label for="sign_up_start" class="col-sm-2 control-label">Sign Up Start Date</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="sign_up_start" name="Sign_up_start" placeholder="Sign up start date!" required>
          </div>
        </div>

        <div class="form-group">
          <label for="sign_up_end" class="col-sm-2 control-label">Sign Up End Date</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="sign_up_end" name="Sign_up_end" placeholder="Sign up end date!" required>
          </div>
        </div>

        <div class="form-group">
          <label for="style" class="col-sm-2 control-label">Tourny Style</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="style" name="Style" placeholder="Style" required>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class='btn btn-success' {{action 'save'}}>Create Tournament</button>
          </div>
        </div>

     </form>
</div>

